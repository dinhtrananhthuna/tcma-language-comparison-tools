<Window x:Class="Tcma.LanguageComparison.Gui.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="550" 
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Similarity Threshold Section -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#E0E0E0" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Similarity Threshold" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Minimum score required for a good match (0.0 - 1.0)"
                           FontSize="12"
                           Foreground="#666666"
                           Margin="0,0,0,15"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ThresholdSlider"
                            Grid.Column="0"
                            Minimum="0.1"
                            Maximum="0.9"
                            Value="0.35"
                            TickFrequency="0.05"
                            TickPlacement="BottomRight"
                            IsSnapToTickEnabled="True"
                            ValueChanged="ThresholdSlider_ValueChanged"
                            Margin="0,0,10,0"/>
                    <TextBox x:Name="ThresholdValueTextBox"
                             Grid.Column="1"
                             Text="0.35"
                             IsReadOnly="True"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"
                             Background="#F8F8F8"
                             BorderBrush="#CCCCCC"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- API Key Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#E0E0E0" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Gemini API Key" 
                           FontWeight="Bold" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Your Google Gemini API key for embedding generation"
                           FontSize="12"
                           Foreground="#666666"
                           Margin="0,0,0,15"/>
                
                <!-- Container for both PasswordBox and TextBox with same position -->
                <Grid Height="32" Margin="0,0,0,8">
                    <PasswordBox x:Name="ApiKeyPasswordBox"
                                FontFamily="Consolas"
                                FontSize="11"
                                Padding="8"
                                PasswordChanged="ApiKeyPasswordBox_PasswordChanged"/>
                    <TextBox x:Name="ApiKeyTextBox"
                            FontFamily="Consolas"
                            FontSize="11"
                            Padding="8"
                            Visibility="Collapsed"
                            TextChanged="ApiKeyTextBox_TextChanged"/>
                </Grid>
                
                <CheckBox x:Name="ShowApiKeyCheckBox"
                         Content="Show API Key"
                         FontSize="11"
                         Checked="ShowApiKeyCheckBox_CheckedChanged"
                         Unchecked="ShowApiKeyCheckBox_CheckedChanged"/>
            </StackPanel>
        </Border>

        <!-- Info Section -->
        <Border Grid.Row="4" 
                Background="#E3F2FD" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#2196F3" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="ðŸ’¡ Tips:" 
                           FontWeight="Bold" 
                           FontSize="12" 
                           Foreground="#1976D2"
                           Margin="0,0,0,5"/>
                <TextBlock FontSize="11" 
                           Foreground="#1976D2"
                           TextWrapping="Wrap">
                    â€¢ Higher threshold = stricter matching, fewer false positives<LineBreak/>
                    â€¢ Lower threshold = more lenient matching, may include weak matches<LineBreak/>
                    â€¢ Recommended range: 0.3 - 0.5 for most use cases
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="80"
                    Height="30"
                    Background="#2196F3"
                    Foreground="White"
                    BorderBrush="#1976D2"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 