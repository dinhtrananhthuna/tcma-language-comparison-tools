<Window x:Class="Tcma.LanguageComparison.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcma.LanguageComparison.Gui"
        mc:Ignorable="d"
        Title="TCMA Language Comparison Tool" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid x:Name="MainLayoutGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>                    <!-- Header -->
            <RowDefinition Height="Auto"/>                    <!-- Tab Control -->
            <RowDefinition Height="*" x:Name="ContentRow"/>   <!-- Content Area -->
            <RowDefinition Height="Auto"/>                    <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Language Comparison Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Control Panel with Tabs -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="15"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <TabControl x:Name="ProcessingModeTabControl">
                <!-- Single File Tab -->
                <TabItem Header="📄 Single File Mode" x:Name="SingleFileTab">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto"
                                  Margin="5">
                        <Grid Margin="10" MinWidth="600">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- File Selection Section -->
                            <Viewbox Grid.Row="0" Stretch="Uniform" StretchDirection="DownOnly">
                                <Grid MinWidth="600" MaxWidth="1000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="250"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*" MinWidth="250"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Reference File Selection -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Reference File (English)" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="180"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="ReferenceFileTextBox" 
                                                     Grid.Column="0"
                                                     IsReadOnly="True" 
                                                     Background="#F8F8F8"
                                                     MinHeight="28"
                                                     VerticalContentAlignment="Center"
                                                     TextWrapping="NoWrap"
                                                     ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                            <Button x:Name="BrowseReferenceButton" 
                                                    Grid.Column="2"
                                                    Content="Browse" 
                                                    Width="80"
                                                    Height="28"
                                                    Click="BrowseReferenceButton_Click"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Target File Selection -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Target File (Other Language)" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="180"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="TargetFileTextBox" 
                                                     Grid.Column="0"
                                                     IsReadOnly="True" 
                                                     Background="#F8F8F8"
                                                     MinHeight="28"
                                                     VerticalContentAlignment="Center"
                                                     TextWrapping="NoWrap"
                                                     ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                            <Button x:Name="BrowseTargetButton" 
                                                    Grid.Column="2"
                                                    Content="Browse" 
                                                    Width="80"
                                                    Height="28"
                                                    Click="BrowseTargetButton_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Viewbox>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,0">
                                <Button x:Name="SettingsButton"
                                        Content="⚙️ Settings"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#607D8B"
                                        Foreground="White"
                                        BorderBrush="#546E7A"
                                        FontSize="12"
                                        Margin="0,0,8,0"
                                        Click="SettingsButton_Click"/>
                                <Button x:Name="CompareButton"
                                        Content="🔍 Compare"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderBrush="#45A049"
                                        FontSize="12"
                                        Margin="8,0,8,0"
                                        Click="CompareButton_Click"/>
                                <Button x:Name="ExportButton"
                                        Content="💾 Export"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderBrush="#F57C00"
                                        FontSize="12"
                                        Margin="8,0,0,0"
                                        IsEnabled="False"
                                        Click="ExportButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>
        
        <!-- Results Section (Single File Mode Only) -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <GroupBox Header="Comparison Results" 
                      x:Name="SingleFileResultsPanel"
                      MinHeight="200">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="150"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results DataGrid -->
                    <DataGrid Grid.Row="0" 
                              x:Name="ResultsDataGrid" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False" 
                              IsReadOnly="True" 
                              GridLinesVisibility="Horizontal"
                              MinHeight="150"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ref Line #" Binding="{Binding RefLineNumber}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="Reference Content" Binding="{Binding RefContent}" Width="300" MinWidth="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Target Line #" Binding="{Binding TargetLineNumber}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="Target Content" Binding="{Binding TargetContent}" Width="250" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Translated Content" Binding="{Binding TranslatedContent}" Width="250" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#0066CC"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" MinWidth="80"/>
                            <DataGridTextColumn Header="Row Type" Binding="{Binding RowType}" Width="100" MinWidth="80"/>
                            <DataGridTextColumn Header="Similarity Score" Binding="{Binding SimilarityScore, StringFormat=F3}" Width="100" MinWidth="80"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                                <Setter Property="MinHeight" Value="25"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                    
                    <!-- Statistics Panel -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,8,0,0">
                        <TextBlock x:Name="StatisticsTextBlock" 
                                   Text="Ready to compare files..." 
                                   FontStyle="Italic"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="25">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="200" 
                                 Height="16" 
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Ready" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
            
            <!-- Copyright -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="By Vu Dinh - Simplify Dalat" 
                           FontSize="10" 
                           Foreground="#666666"
                           FontStyle="Italic"
                           VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>

