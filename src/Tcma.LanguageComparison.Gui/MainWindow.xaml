<Window x:Class="Tcma.LanguageComparison.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcma.LanguageComparison.Gui"
        mc:Ignorable="d"
        Title="TCMA Language Comparison Tool" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid x:Name="MainLayoutGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>                    <!-- Header -->
            <RowDefinition Height="Auto"/>                    <!-- Tab Control -->
            <RowDefinition Height="*" x:Name="ContentRow"/>   <!-- Content Area -->
            <RowDefinition Height="Auto"/>                    <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Language Comparison Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Control Panel with Tabs -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="15"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <TabControl x:Name="ProcessingModeTabControl" SelectionChanged="ProcessingModeTabControl_SelectionChanged">
                <!-- Single File Tab -->
                <TabItem Header="📄 Single File Mode" x:Name="SingleFileTab">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto"
                                  Margin="5">
                        <Grid Margin="10" MinWidth="600">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- File Selection Section -->
                            <Viewbox Grid.Row="0" Stretch="Uniform" StretchDirection="DownOnly">
                                <Grid MinWidth="600" MaxWidth="1000">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="250"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*" MinWidth="250"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Reference File Selection -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Reference File (English)" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="180"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="ReferenceFileTextBox" 
                                                     Grid.Column="0"
                                                     IsReadOnly="True" 
                                                     Background="#F8F8F8"
                                                     MinHeight="28"
                                                     VerticalContentAlignment="Center"
                                                     TextWrapping="NoWrap"
                                                     ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                            <Button x:Name="BrowseReferenceButton" 
                                                    Grid.Column="2"
                                                    Content="Browse" 
                                                    Width="80"
                                                    Height="28"
                                                    Click="BrowseReferenceButton_Click"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Target File Selection -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Target File (Other Language)" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Margin="0,0,0,8"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="180"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox x:Name="TargetFileTextBox" 
                                                     Grid.Column="0"
                                                     IsReadOnly="True" 
                                                     Background="#F8F8F8"
                                                     MinHeight="28"
                                                     VerticalContentAlignment="Center"
                                                     TextWrapping="NoWrap"
                                                     ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                            <Button x:Name="BrowseTargetButton" 
                                                    Grid.Column="2"
                                                    Content="Browse" 
                                                    Width="80"
                                                    Height="28"
                                                    Click="BrowseTargetButton_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Viewbox>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,10,0,0">
                                <Button x:Name="SettingsButton"
                                        Content="⚙️ Settings"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#607D8B"
                                        Foreground="White"
                                        BorderBrush="#546E7A"
                                        FontSize="12"
                                        Margin="0,0,8,0"
                                        Click="SettingsButton_Click"/>
                                <Button x:Name="CompareButton"
                                        Content="🔍 Compare"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderBrush="#45A049"
                                        FontSize="12"
                                        Margin="8,0,8,0"
                                        Click="CompareButton_Click"/>
                                <Button x:Name="ExportButton"
                                        Content="💾 Export"
                                        MinWidth="100"
                                        Height="38"
                                        Background="#FF9800"
                                        Foreground="White"
                                        BorderBrush="#F57C00"
                                        FontSize="12"
                                        Margin="8,0,0,0"
                                        IsEnabled="False"
                                        Click="ExportButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Multi-Page Tab -->
                <TabItem Header="📚 Multi-Page Mode" x:Name="MultiPageTab" Visibility="Collapsed">
                    <!-- Multi-page content takes full available space -->
                    <Grid x:Name="MultiPageGrid" Margin="10" 
                          Height="450"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" MinWidth="300" MaxWidth="450"/>  <!-- Page Management Panel - resizable -->
                            <ColumnDefinition Width="5"/>    <!-- Splitter -->
                            <ColumnDefinition Width="*"/>    <!-- Results Panel -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Page Management -->
                        <GroupBox Grid.Column="0" Header="📁 Page Management" 
                                  VerticalAlignment="Stretch">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>  <!-- Upload Section -->
                                    <RowDefinition Height="Auto"/>  <!-- Status -->
                                    <RowDefinition Height="*"/>     <!-- Page List -->
                                    <RowDefinition Height="Auto"/>  <!-- Controls -->
                                </Grid.RowDefinitions>

                                <!-- ZIP Upload Section -->
                                <StackPanel Grid.Row="0" Margin="5">
                                    <TextBlock Text="Upload ZIP Files" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ReferenceZipTextBox" 
                                                 Grid.Column="0"
                                                 IsReadOnly="True" 
                                                 Background="#F8F8F8"
                                                 Margin="0,0,5,0"
                                                 Text="Reference ZIP..."/>
                                        <Button x:Name="BrowseReferenceZipButton" 
                                                Grid.Column="1"
                                                Content="Browse" 
                                                Width="60"
                                                Click="BrowseReferenceZipButton_Click"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="TargetZipTextBox" 
                                                 Grid.Column="0"
                                                 IsReadOnly="True" 
                                                 Background="#F8F8F8"
                                                 Margin="0,0,5,0"
                                                 Text="Target ZIP..."/>
                                        <Button x:Name="BrowseTargetZipButton" 
                                                Grid.Column="1"
                                                Content="Browse" 
                                                Width="60"
                                                Click="BrowseTargetZipButton_Click"/>
                                    </Grid>
                                    <Button x:Name="LoadPagesButton"
                                            Content="🔄 Load Pages"
                                            HorizontalAlignment="Stretch"
                                            Background="#2196F3"
                                            Foreground="White"
                                            Height="30"
                                            IsEnabled="False"
                                            Click="LoadPagesButton_Click"/>
                                </StackPanel>

                                <!-- Status Section -->
                                <TextBlock Grid.Row="1" 
                                           x:Name="PagesStatusText" 
                                           Margin="5"
                                           Text="Select ZIP files to begin..."
                                           FontStyle="Italic"
                                           Foreground="#666"/>

                                <!-- Page List -->
                                <ListView Grid.Row="2" 
                                          x:Name="PageListView" 
                                          Margin="5"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          VirtualizingPanel.IsVirtualizing="True"
                                          VirtualizingPanel.VirtualizationMode="Recycling"
                                          SelectionChanged="PageListView_SelectionChanged">
                                    <ListView.Resources>
                                        <!-- Custom styling for selected items -->
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#E3F2FD"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#BBDEFB"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#BBDEFB"/>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black"/>
                                    </ListView.Resources>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Style.Triggers>
                                                <!-- Selected item styling -->
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#E3F2FD"/>
                                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                                    <Setter Property="BorderThickness" Value="2,0,2,0"/>
                                                </Trigger>
                                                <!-- Hover effect -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                                <!-- Selected + Hover -->
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsSelected" Value="True"/>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" Value="#BBDEFB"/>
                                                </MultiTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="2" Padding="5" Background="Transparent" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>   <!-- Status Icon -->
                                                        <ColumnDefinition Width="*"/>    <!-- Page Info -->
                                                        <ColumnDefinition Width="70"/>   <!-- Process Button (Fixed Width) -->
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Status Icon -->
                                                    <TextBlock Grid.Column="0" 
                                                             Text="{Binding StatusIcon}" 
                                                             FontSize="16"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>

                                                    <!-- Page Info -->
                                                    <StackPanel Grid.Column="1" Margin="5,2,10,2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding PageName}" 
                                                                 FontWeight="Bold"
                                                                 TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                 FontSize="10"
                                                                 Foreground="#666"
                                                                 TextTrimming="CharacterEllipsis"/>
                                                        <ProgressBar Height="3" 
                                                                   Value="{Binding Progress}"
                                                                   Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <!-- Process Button Area -->
                                                    <Grid Grid.Column="2">
                                                        <!-- Process Button - Only show when CanProcess -->
                                                        <Button Content="Process"
                                                              Width="65"
                                                              Height="28"
                                                              FontSize="10"
                                                              Background="#4CAF50"
                                                              Foreground="White"
                                                              BorderThickness="1"
                                                              BorderBrush="#45A049"
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Center"
                                                              IsEnabled="{Binding CanProcess}"
                                                              Click="ProcessPageButton_Click"
                                                              Tag="{Binding}">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <!-- Hide button when Status is Completed or Cached -->
                                                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Cached">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>

                                                        <!-- Status Text - Show when processed -->
                                                        <TextBlock Text="✓ Processed" 
                                                                 FontSize="9"
                                                                 Foreground="#4CAF50"
                                                                 FontWeight="Bold"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,5,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <!-- Show text when Status is Completed or Cached -->
                                                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Cached">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Control Buttons -->
                                <StackPanel Grid.Row="3" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="ClearCacheButton" 
                                            Content="🗑️ Clear Cache"
                                            Width="90"
                                            Height="25"
                                            FontSize="10"
                                            Background="#FF5722"
                                            Foreground="White"
                                            Margin="0,0,5,0"
                                            Click="ClearCacheButton_Click"/>
                                    <Button x:Name="RefreshPagesButton" 
                                            Content="🔄 Refresh"
                                            Width="70"
                                            Height="25"
                                            FontSize="10"
                                            Background="#607D8B"
                                            Foreground="White"
                                            Click="RefreshPagesButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <GridSplitter Grid.Column="1" 
                                      Width="5" 
                                      Background="#E0E0E0"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      ResizeBehavior="PreviousAndNext"
                                      ResizeDirection="Columns"/>

                        <!-- Right Panel: Results -->
                        <GroupBox Grid.Column="2" Header="📊 Page Results"
                                  VerticalAlignment="Stretch">
                            <DataGrid x:Name="MultiPageResultsDataGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      CanUserResizeColumns="True"
                                      CanUserSortColumns="True"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Ref Line #" Binding="{Binding RefLineNumber}" Width="100"/>
                                    <DataGridTextColumn Header="Reference Content" Binding="{Binding RefContent}" Width="400">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Target Line #" Binding="{Binding TargetLineNumber}" Width="100"/>
                                    <DataGridTextColumn Header="Target Content" Binding="{Binding TargetContent}" Width="300">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Translated Content" Binding="{Binding TranslatedContent}" Width="300">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Foreground" Value="#0066CC"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                    <DataGridTextColumn Header="Row Type" Binding="{Binding RowType}" Width="100"/>
                                    <DataGridTextColumn Header="Similarity Score" Binding="{Binding SimilarityScore, StringFormat=F3}" Width="110"/>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="{Binding RowBackground}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
        
        <!-- Results Section (Single File Mode Only) -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <GroupBox Header="Comparison Results" 
                      x:Name="SingleFileResultsPanel"
                      MinHeight="200">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="150"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results DataGrid -->
                    <DataGrid Grid.Row="0" 
                              x:Name="ResultsDataGrid" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              CanUserDeleteRows="False" 
                              IsReadOnly="True" 
                              GridLinesVisibility="Horizontal"
                              MinHeight="150"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ref Line #" Binding="{Binding RefLineNumber}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="Reference Content" Binding="{Binding RefContent}" Width="300" MinWidth="200">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Target Line #" Binding="{Binding TargetLineNumber}" Width="80" MinWidth="60"/>
                            <DataGridTextColumn Header="Target Content" Binding="{Binding TargetContent}" Width="250" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Translated Content" Binding="{Binding TranslatedContent}" Width="250" MinWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#0066CC"/>
                                        <Setter Property="Padding" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" MinWidth="80"/>
                            <DataGridTextColumn Header="Row Type" Binding="{Binding RowType}" Width="100" MinWidth="80"/>
                            <DataGridTextColumn Header="Similarity Score" Binding="{Binding SimilarityScore, StringFormat=F3}" Width="100" MinWidth="80"/>
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding RowBackground}"/>
                                <Setter Property="MinHeight" Value="25"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                    
                    <!-- Statistics Panel -->
                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,8,0,0">
                        <TextBlock x:Name="StatisticsTextBlock" 
                                   Text="Ready to compare files..." 
                                   FontStyle="Italic"
                                   FontSize="11"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="25">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="200" 
                                 Height="16" 
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Ready" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
            
            <!-- Copyright -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="By Vu Dinh - Simplify Dalat" 
                           FontSize="10" 
                           Foreground="#666666"
                           FontStyle="Italic"
                           VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>

