<Window x:Class="Tcma.LanguageComparison.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcma.LanguageComparison.Gui"
        mc:Ignorable="d"
        Title="TCMA Language Comparison Tool" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Language Comparison Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Control Panel with Tabs -->
        <Border Grid.Row="1" 
                Background="White" 
                Padding="15"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <TabControl x:Name="ProcessingModeTabControl" SelectionChanged="ProcessingModeTabControl_SelectionChanged">
                <!-- Single File Tab -->
                <TabItem Header="📄 Single File Mode" x:Name="SingleFileTab">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- File Selection -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Reference File (English)" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="ReferenceFileTextBox" 
                                         Grid.Column="0"
                                         IsReadOnly="True" 
                                         Background="#F8F8F8"
                                         Margin="0,0,5,0"/>
                                <Button x:Name="BrowseReferenceButton" 
                                        Grid.Column="1"
                                        Content="Browse" 
                                        Width="70"
                                        Click="BrowseReferenceButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Target File (Other Language)" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TargetFileTextBox" 
                                         Grid.Column="0"
                                         IsReadOnly="True" 
                                         Background="#F8F8F8"
                                         Margin="0,0,5,0"/>
                                <Button x:Name="BrowseTargetButton" 
                                        Grid.Column="1"
                                        Content="Browse" 
                                        Width="70"
                                        Click="BrowseTargetButton_Click"/>
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <Button x:Name="SettingsButton"
                                    Content="⚙️ Settings"
                                    Width="100"
                                    Height="35"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderBrush="#546E7A"
                                    Margin="0,0,5,0"
                                    Click="SettingsButton_Click"/>
                            <Button x:Name="CompareButton"
                                    Content="🔍 Compare"
                                    Width="100"
                                    Height="35"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderBrush="#45A049"
                                    Margin="5,0,5,0"
                                    Click="CompareButton_Click"/>
                            <Button x:Name="ExportButton"
                                    Content="💾 Export"
                                    Width="100"
                                    Height="35"
                                    Background="#FF9800"
                                    Foreground="White"
                                    BorderBrush="#F57C00"
                                    Margin="5,0,0,0"
                                    IsEnabled="False"
                                    Click="ExportButton_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Multi-Page Tab -->
                <TabItem Header="📚 Multi-Page Mode" x:Name="MultiPageTab">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>  <!-- Page Management Panel -->
                            <ColumnDefinition Width="5"/>    <!-- Splitter -->
                            <ColumnDefinition Width="*"/>    <!-- Results Panel -->
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel: Page Management -->
                        <GroupBox Grid.Column="0" Header="📁 Page Management">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>  <!-- Upload Section -->
                                    <RowDefinition Height="Auto"/>  <!-- Status -->
                                    <RowDefinition Height="*"/>     <!-- Page List -->
                                    <RowDefinition Height="Auto"/>  <!-- Controls -->
                                </Grid.RowDefinitions>

                                <!-- ZIP Upload Section -->
                                <StackPanel Grid.Row="0" Margin="5">
                                    <TextBlock Text="Upload ZIP Files" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="ReferenceZipTextBox" 
                                                 Grid.Column="0"
                                                 IsReadOnly="True" 
                                                 Background="#F8F8F8"
                                                 Margin="0,0,5,0"
                                                 Text="Reference ZIP..."/>
                                        <Button x:Name="BrowseReferenceZipButton" 
                                                Grid.Column="1"
                                                Content="Browse" 
                                                Width="60"
                                                Click="BrowseReferenceZipButton_Click"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="TargetZipTextBox" 
                                                 Grid.Column="0"
                                                 IsReadOnly="True" 
                                                 Background="#F8F8F8"
                                                 Margin="0,0,5,0"
                                                 Text="Target ZIP..."/>
                                        <Button x:Name="BrowseTargetZipButton" 
                                                Grid.Column="1"
                                                Content="Browse" 
                                                Width="60"
                                                Click="BrowseTargetZipButton_Click"/>
                                    </Grid>
                                    <Button x:Name="LoadPagesButton"
                                            Content="🔄 Load Pages"
                                            HorizontalAlignment="Stretch"
                                            Background="#2196F3"
                                            Foreground="White"
                                            Height="30"
                                            IsEnabled="False"
                                            Click="LoadPagesButton_Click"/>
                                </StackPanel>

                                <!-- Status Section -->
                                <TextBlock Grid.Row="1" 
                                           x:Name="PagesStatusText" 
                                           Margin="5"
                                           Text="Select ZIP files to begin..."
                                           FontStyle="Italic"
                                           Foreground="#666"/>

                                <!-- Page List -->
                                <ListView Grid.Row="2" 
                                          x:Name="PageListView" 
                                          Margin="5"
                                          SelectionChanged="PageListView_SelectionChanged">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>  <!-- Status Icon -->
                                                    <ColumnDefinition Width="*"/>   <!-- Page Name -->
                                                    <ColumnDefinition Width="Auto"/> <!-- Action Button -->
                                                </Grid.ColumnDefinitions>

                                                <!-- Status Icon -->
                                                <TextBlock Grid.Column="0" 
                                                         Text="{Binding StatusIcon}" 
                                                         FontSize="16"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>

                                                <!-- Page Info -->
                                                <StackPanel Grid.Column="1" Margin="5,0">
                                                    <TextBlock Text="{Binding PageName}" 
                                                             FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding DisplayName}" 
                                                             FontSize="10"
                                                             Foreground="#666"
                                                             TextTrimming="CharacterEllipsis"/>
                                                    <ProgressBar Height="4" 
                                                               Value="{Binding Progress}"
                                                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <!-- Action Button -->
                                                <Button Grid.Column="2" 
                                                      Content="Process"
                                                      Width="60"
                                                      Height="25"
                                                      FontSize="10"
                                                      Background="#4CAF50"
                                                      Foreground="White"
                                                      IsEnabled="{Binding CanProcess}"
                                                      Click="ProcessPageButton_Click"
                                                      Tag="{Binding}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Control Buttons -->
                                <StackPanel Grid.Row="3" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="ClearCacheButton" 
                                            Content="🗑️ Clear Cache"
                                            Width="90"
                                            Height="25"
                                            FontSize="10"
                                            Background="#FF5722"
                                            Foreground="White"
                                            Margin="0,0,5,0"
                                            Click="ClearCacheButton_Click"/>
                                    <Button x:Name="RefreshPagesButton" 
                                            Content="🔄 Refresh"
                                            Width="70"
                                            Height="25"
                                            FontSize="10"
                                            Background="#607D8B"
                                            Foreground="White"
                                            Click="RefreshPagesButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <GridSplitter Grid.Column="1" Width="5" Background="#E0E0E0"/>

                        <!-- Right Panel: Results -->
                        <GroupBox Grid.Column="2" Header="📊 Page Results">
                            <TabControl x:Name="PageResultsTabControl">
                                <!-- Dynamic tabs will be added here for each processed page -->
                                <TabItem Header="No pages processed yet" x:Name="EmptyResultsTab">
                                    <TextBlock Text="Process a page from the left panel to see results here."
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             FontStyle="Italic"
                                             Foreground="#999"/>
                                </TabItem>
                            </TabControl>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
        
        <!-- Results Section -->
        <GroupBox Grid.Row="2" Header="Comparison Results" Margin="0,10,0,0">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Results DataGrid -->
                <DataGrid Grid.Row="0" 
                          x:Name="ResultsDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False" 
                          IsReadOnly="True" 
                          GridLinesVisibility="Horizontal"
                          MaxHeight="400"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Target Line #" Binding="{Binding TargetLineNumber}" Width="80"/>
                        <DataGridTextColumn Header="Target Content" Binding="{Binding TargetContent}" Width="300">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ref. Line #" Binding="{Binding ReferenceLineNumber}" Width="80"/>
                        <DataGridTextColumn Header="Reference Content" Binding="{Binding ReferenceContent}" Width="300">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Similarity Score" Binding="{Binding SimilarityScore, StringFormat=F3}" Width="120"/>
                        <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="80"/>
                        <DataGridTextColumn Header="Suggestion" Binding="{Binding Suggestion}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{Binding RowBackground}"/>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
                
                <!-- Statistics Panel -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,5,0,0">
                    <TextBlock x:Name="StatisticsTextBlock" 
                               Text="Ready to compare files..." 
                               FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="200" 
                                 Height="16" 
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Ready" 
                               Margin="10,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
            
            <!-- Copyright -->
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="By Vu Dinh - Simplify Dalat" 
                           FontSize="10" 
                           Foreground="#666666"
                           FontStyle="Italic"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>
