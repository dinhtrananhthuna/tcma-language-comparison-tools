<Window x:Class="Tcma.LanguageComparison.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcma.LanguageComparison.Gui"
        mc:Ignorable="d"
        Title="TCMA Language Comparison Tool" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Language Comparison Tool" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- File Selection Section -->
        <GroupBox Grid.Row="1" Header="File Selection" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Reference File -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Reference File:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           Width="120"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="ReferenceFileTextBox" 
                         IsReadOnly="True" 
                         Margin="0,0,10,5"/>
                <Button Grid.Row="0" Grid.Column="2" 
                        x:Name="BrowseReferenceButton" 
                        Content="Browse..." 
                        Width="80" 
                        Click="BrowseReferenceButton_Click"/>
                
                <!-- Target File -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Target File:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           Width="120"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="TargetFileTextBox" 
                         IsReadOnly="True" 
                         Margin="0,5,10,0"/>
                <Button Grid.Row="1" Grid.Column="2" 
                        x:Name="BrowseTargetButton" 
                        Content="Browse..." 
                        Width="80" 
                        Click="BrowseTargetButton_Click"/>
            </Grid>
        </GroupBox>
        
        <!-- API Configuration Section -->
        <GroupBox Grid.Row="2" Header="API Configuration" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Gemini API Key:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0" 
                           Width="120"/>
                <PasswordBox Grid.Column="1" 
                             x:Name="ApiKeyPasswordBox" 
                             ToolTip="Enter your Google Gemini API key"
                             PasswordChanged="ApiKeyPasswordBox_PasswordChanged"/>
            </Grid>
        </GroupBox>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,10">
            <Button x:Name="CompareButton" 
                    Content="Compare Files" 
                    Width="120" 
                    Height="35" 
                    FontSize="14" 
                    Margin="0,0,10,0" 
                    Click="CompareButton_Click"/>
            <Button x:Name="ExportButton" 
                    Content="Export Results" 
                    Width="120" 
                    Height="35" 
                    FontSize="14" 
                    IsEnabled="False" 
                    Click="ExportButton_Click"/>
        </StackPanel>
        
        <!-- Results Section -->
        <GroupBox Grid.Row="4" Header="Comparison Results">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Results DataGrid -->
                <DataGrid Grid.Row="0" 
                          x:Name="ResultsDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False" 
                          IsReadOnly="True" 
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Target Line #" Binding="{Binding TargetLineNumber}" Width="80"/>
                        <DataGridTextColumn Header="Target Content" Binding="{Binding TargetContent}" Width="300">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ref. Line #" Binding="{Binding ReferenceLineNumber}" Width="80"/>
                        <DataGridTextColumn Header="Reference Content" Binding="{Binding ReferenceContent}" Width="300">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Similarity Score" Binding="{Binding SimilarityScore, StringFormat=F3}" Width="120"/>
                        <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="80"/>
                        <DataGridTextColumn Header="Suggestion" Binding="{Binding Suggestion}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{Binding RowBackground}"/>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
                
                <!-- Statistics Panel -->
                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,5,0,0">
                    <TextBlock x:Name="StatisticsTextBlock" 
                               Text="Ready to compare files..." 
                               FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="5">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="ProgressBar" 
                                 Width="200" 
                                 Height="16" 
                                 IsIndeterminate="True"
                                 Visibility="Collapsed"/>
                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Ready" 
                               Margin="10,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>
